<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appThemeColour</item>
        <item name="colorPrimaryDark">@color/appThemeColour</item>
        <item name="colorAccent">@color/appThemeColour</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_extra_large">
        <item name="android:textSize">@dimen/textSize20</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">@dimen/textSize18</item>
    </style>

    <style name="text_medium">
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="text_small">
        <item name="android:textSize">@dimen/textSize14</item>
    </style>

    <style name="text_ultra_small">
        <item name="android:textSize">@dimen/textSize12</item>
    </style>

    <style name="search_button" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/appThemeColour</item>
        <item name="colorButtonNormal">@color/appThemeColour</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/search_btn_txt_size</item>
        <item name="android:minHeight">@dimen/search_btn_height</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/app_colour_gradient</item>
        <item name="android:padding">@dimen/padding_2</item>
        <item name="android:text">@string/search</item>
        <item name="android:minWidth">@dimen/search_btn_width</item>
        <item name="android:layout_marginEnd">@dimen/margin_5</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="search_criteria_text">
        <item name="android:text">@string/searchcriteria</item>
        <item name="android:textSize">@dimen/search_btn_txt_size</item>
        <item name="android:layout_marginStart">@dimen/size8</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner_text">
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:layout_marginStart">@dimen/size10</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="grid_text">
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:padding">@dimen/size10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/audit_border</item>
    </style>

    <style name="filter_spinner_style">
        <item name="android:minHeight">@dimen/filter_spinner_height</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="spinner_drop_down_icon">
        <item name="android:layout_marginEnd">@dimen/size10</item>
        <item name="android:src">@drawable/spinner_drop</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/appThemeColour</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_marginTop">@dimen/size10</item>
        <item name="android:layout_marginLeft">@dimen/size10</item>
        <item name="android:layout_marginRight">@dimen/size10</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/appThemeColour</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/appThemeColour</item>
    </style>

    <style name="ToolbarColorStyle" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="DashboardRankText" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size5</item>
    </style>

    <style name="DashboardDeptText" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/list_text_size_1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size5</item>
    </style>

    <style name="AuditTextHeadStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size5</item>
    </style>

    <style name="StandardReportStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/standard_report_txt</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/size5</item>
    </style>

    <style name="AuditTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size5</item>
    </style>

    <style name="ExpandIconStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">@dimen/drop_down_icon</item>
        <item name="android:layout_height">@dimen/drop_down_icon</item>
        <item name="android:src">@drawable/expand_icon</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">@dimen/margin_5</item>
        <item name="android:layout_marginStart">@dimen/margin_5</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AverageScoreStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/average_score_text_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="HeadingTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="StandardReportHeadingTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">@dimen/nav_items_text_size</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
        <item name="android:minWidth">@dimen/menu_item_space</item>

        <item name="android:padding">0dip</item>
    </style>

    <style name="PagerIndicatorStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
