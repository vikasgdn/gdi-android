<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:padding="@dimen/d_15dp">

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_round">

           <TextView
               android:id="@+id/tv_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/d_15dp"
               android:text="@string/app_name"
               android:textSize="20sp"
               android:fontFamily="@font/comfortaa_bold"
               android:gravity="center"
               android:textColor="@color/darkGrey"/>


        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/d_30dp"
            android:layout_height="@dimen/d_30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/d_5dp"
            android:src="@drawable/ic_cancel_gray"/>


        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_margin="@dimen/d_10dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_titleh"
                    android:drawablePadding="@dimen/d_5dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/appThemeColour"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="@dimen/d_15dp"
                    android:paddingRight="@dimen/d_5dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_titleheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/textGrey"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingTop="15dp"
                    android:paddingBottom="@dimen/d_15dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_regular"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_locationh"
                    android:textColor="@color/appThemeColour"
                    android:drawablePadding="@dimen/d_5dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="@dimen/d_15dp"
                    android:paddingRight="@dimen/d_5dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/textGrey"
                    android:gravity="left|center_vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="@dimen/d_15dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_regular"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_checklisth"
                    android:textColor="@color/appThemeColour"
                    android:paddingTop="15dp"
                    android:paddingBottom="@dimen/d_15dp"
                    android:paddingRight="@dimen/d_5dp"
                    android:drawablePadding="@dimen/d_5dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_checklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/textGrey"
                    android:gravity="left|center_vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="@dimen/d_15dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_regular"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>