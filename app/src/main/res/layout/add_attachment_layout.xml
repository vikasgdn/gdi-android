<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_10"
                android:paddingEnd="@dimen/padding_5"
                android:layout_alignParentEnd="true">

                <CheckBox
                    android:id="@+id/cb_add_attachment_critical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:buttonTint="@color/appThemeColour"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/critical_decription_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    style="@style/text_medium"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/critical_background"
                    android:text="i"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_5"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_add_attachment_image"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size80"
                        android:layout_weight="1"
                        android:src="@drawable/audit_logo"/>

                    <TextView
                        android:id="@+id/tv_add_attachment_file_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="TEST TEST TEST TEST TEST TES TEST TEST TEST TEST TEST TEST TEST TEST TEST"
                        android:layout_marginStart="@dimen/margin_10"
                        style="@style/text_small"
                        android:layout_weight="3"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_add_attachment_file_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:padding="@dimen/padding_5"
                    android:background="@drawable/change_password_border"
                    android:textSize="@dimen/action_plan_txt"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/margin_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <Button
                        android:id="@+id/add_attachment_edit_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSize14"
                        android:minHeight="@dimen/search_btn_height"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/app_colour_gradient" />

                    <Button
                        android:id="@+id/add_attachment_delete_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSize14"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:minHeight="@dimen/search_btn_height"
                        android:background="@drawable/app_colour_gradient" />

                    <Button
                        android:id="@+id/btn_view_question"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Download"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSize14"
                        android:minHeight="@dimen/search_btn_height"
                        android:background="@drawable/app_colour_gradient" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>