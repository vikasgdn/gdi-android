<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_10"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_attached_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size120"
                android:scaleType="fitXY"
                android:src="@drawable/app_colour_gradient" />

            <ImageButton
                android:id="@+id/edit_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="@dimen/margin_5"
                android:src="@drawable/edit_icon"></ImageButton>

        </RelativeLayout>



        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize14"
            android:minLines="6"
            android:gravity="top"
            android:hint="@string/enter_desc"
            android:background="@drawable/attachment_description_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_30"
            android:paddingEnd="@dimen/padding_30"
            android:layout_marginTop="@dimen/margin_20">

            <TextView
                android:id="@+id/tv_submit_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/submit"
                android:layout_weight="1"
                android:padding="@dimen/padding_5"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/app_btn_gradient"
                android:textSize="@dimen/textSize14" />

            <TextView
                android:id="@+id/tv_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cancel"
                android:padding="@dimen/padding_5"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_20"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/app_btn_gradient"
                android:textSize="@dimen/textSize14" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>