<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_integrity_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/app_colour_gradient"
                android:padding="@dimen/size5">

                <TextView
                    android:id="@+id/tv_integrity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/luxuryhotelmilan"
                    style="@style/HeadingTextStyle" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:padding="@dimen/size10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rowCount="2"
                        android:columnCount="5"
                        android:padding="@dimen/size5"
                        android:layout_centerHorizontal="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/audit_border"
                            android:padding="@dimen/padding_10">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/list_text_size"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorBlack"
                                    android:text="Staff name"
                                    android:textStyle="bold"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size5">

                                    <TextView
                                        android:id="@+id/tv_integrity_staff_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/list_text_size"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorBlack"
                                        android:text="Jessica"
                                        android:layout_centerHorizontal="true"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/audit_border"
                            android:padding="@dimen/padding_10">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/list_text_size"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorBlack"
                                        android:text="Date"
                                        android:layout_centerHorizontal="true"
                                        android:textStyle="bold"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size5">

                                    <TextView
                                        android:id="@+id/tv_integrity_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/list_text_size"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorBlack"
                                        android:text="Jessica"
                                        android:layout_centerHorizontal="true"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/audit_border"
                            android:padding="@dimen/padding_10">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/list_text_size"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorBlack"
                                        android:text="Time"
                                        android:textStyle="bold"
                                        android:layout_centerHorizontal="true"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size5">

                                    <TextView
                                        android:id="@+id/tv_integrity_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/list_text_size"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorBlack"
                                        android:text="22:33"
                                        android:layout_centerHorizontal="true"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </GridLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Summary :"
                        android:textSize="@dimen/list_text_size"
                        android:layout_marginStart="@dimen/size10"
                        android:layout_marginBottom="@dimen/size5"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/tv_integrity_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_para"
                        android:textSize="@dimen/list_text_size"
                        android:padding="@dimen/size10"
                        android:background="@drawable/audit_border" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attachment_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:background="@color/appThemeColour"
                    android:layout_marginTop="@dimen/margin_10"
                    android:paddingStart="@dimen/padding_10"
                    android:paddingEnd="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_3"
                    android:paddingBottom="@dimen/padding_3">

                    <TextView
                        android:id="@+id/tv_attachment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(4)"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/attachment_icon"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>