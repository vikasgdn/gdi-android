<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dashboard_allover_layout_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/ia_dashboard_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cell_size"
                        android:layout_margin="@dimen/cell_margin"
                        android:background="@drawable/report_border_layout"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/expandIcon"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:src="@drawable/audit_analysis" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dashboard"
                            android:singleLine="true"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/layout_text_size" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ia_internal_audit_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cell_size"
                        android:layout_margin="@dimen/cell_margin"
                        android:gravity="center"
                        android:background="@drawable/report_border_layout"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/expandIcon2"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:src="@mipmap/audit_report" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="@string/audit_report"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/layout_text_size" />

                    </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ia_detailed_summary_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cell_size"
                        android:layout_margin="@dimen/cell_margin"
                        android:gravity="center"
                        android:background="@drawable/report_border_layout"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/expandIcon3"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:src="@mipmap/internal_audit" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/detailedsummary"
                            android:paddingBottom="@dimen/margin_5"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/layout_text_size" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ia_executive_summary_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cell_size"
                        android:layout_margin="@dimen/cell_margin"
                        android:gravity="center"
                        android:background="@drawable/report_border_layout"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/expandIcon4"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:src="@drawable/audit_analysis" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/executivesummary"
                            android:paddingBottom="@dimen/margin_5"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/layout_text_size" />

                    </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ia_audio_images_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cell_size"
                        android:layout_margin="@dimen/cell_margin"
                        android:gravity="center"
                        android:background="@drawable/report_border_layout"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/expandIcon5"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:src="@mipmap/audit_report" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/audio_images"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:textSize="@dimen/layout_text_size" />

                    </LinearLayout>


            </LinearLayout>

        </LinearLayout>


</RelativeLayout>