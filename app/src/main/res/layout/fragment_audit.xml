<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    >
    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_description_insp"
            android:layout_marginBottom="@dimen/d_5dp"
            android:layout_marginTop="@dimen/d_5dp"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/d_10dp"
            android:gravity="left"
            android:textColor="@color/c_gray"
            android:fontFamily="@font/nunitosans_regular"
            android:textSize="@dimen/text_size_14"/>

        <LinearLayout
            android:id="@+id/ll_audit_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            android:layout_below="@+id/tv_description"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/s_scheduled_audit"
                    android:layout_marginTop="@dimen/d_1dp"
                    android:layout_marginBottom="@dimen/d_1dp"
                    android:layout_marginLeft="@dimen/d_1dp"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:fontFamily="@font/nunitosans_regular"
                    android:padding="@dimen/d_8dp"
                    android:textColor="@color/text_selector"
                    android:textSize="@dimen/text_size_14"/>
                <View
                    android:id="@+id/view_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="@dimen/d_5dp"
                    android:layout_gravity="center"
                    android:background="@color/c_yellow"
                    android:visibility="visible"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="@dimen/d_1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_progress_audit"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/d_1dp"
                    android:layout_marginBottom="@dimen/d_1dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:padding="@dimen/d_8dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@color/text_selector"
                    android:textSize="@dimen/text_size_14"/>
                <View
                    android:id="@+id/view_progress"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/d_5dp"
                    android:background="@color/c_yellow"
                    android:visibility="invisible"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="@dimen/d_1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_overdue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_overdue"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/d_1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/nunitosans_regular"
                    android:padding="@dimen/d_8dp"
                    android:textColor="@color/text_selector"
                    android:textSize="@dimen/text_size_14"/>
                <View
                    android:id="@+id/view_overdue"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:background="@color/c_yellow"
                    android:layout_marginHorizontal="@dimen/d_5dp"
                    android:visibility="invisible"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

        <com.gdi.utils.JustifiedTextView
            android:id="@+id/tv_audit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_audit_des"
            android:layout_marginTop="@dimen/d_5dp"
            android:visibility="gone"
            android:layout_below="@+id/ll_audit_type"
            android:layout_gravity="left"
            android:padding="@dimen/d_5dp"
            android:textColor="@color/c_gray"
            android:fontFamily="@font/nunitosans_regular"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>
    <View
        android:id="@+id/view_devider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1dp"
        android:layout_below="@+id/ll_parent"
        android:visibility="invisible"
        android:background="@color/c_white"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_auditlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_parent"
        android:layout_marginTop="@dimen/d_4dp"
        android:layout_marginBottom="@dimen/d_60dp"
        android:fadeScrollbars="false"
        tools:listitem="@layout/adapter_auditlist"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />


    <RelativeLayout
        android:id="@+id/rl_nodatafound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_devider"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_nodatafound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nunitosans_regular"
            android:gravity="center"
            android:padding="@dimen/d_8dp"
            android:text="@string/s_nodatafound"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_18"
            android:visibility="visible" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginBottom="80dp"
        android:tint="@android:color/white"
        android:visibility="gone"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add" />

    <include
        android:layout_width="@dimen/d_progressbar"
        android:layout_height="@dimen/d_progressbar"
        android:layout_centerInParent="true"
        layout="@layout/spunk_view"
        />

</RelativeLayout>