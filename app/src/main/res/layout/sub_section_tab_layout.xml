<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_sub_section_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submitted_status_border"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sub_section_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/submitted_status_icon" />

        <TextView
            android:id="@+id/tv_sub_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Standard"
            android:textAlignment="center"
            android:textColor="@color/scoreGreen"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/tv_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textAlignment="center"
            android:textColor="@color/scoreGreen"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_question_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5/12"
            android:textAlignment="center"
            android:textColor="@color/scoreGreen"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_sub_section_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:padding="@dimen/padding_5"
            android:layout_margin="@dimen/size1"
            android:textAlignment="center"
            android:background="@color/lightGrey"
            android:textColor="@color/scoreGreen"
            android:textSize="@dimen/layout_text_size" />


    </LinearLayout>

</android.support.v7.widget.CardView>