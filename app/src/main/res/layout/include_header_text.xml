<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appThemeColour">
    <ImageView
        android:id="@+id/iv_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d_10dp"
        android:visibility="visible"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_header_left"
        android:layout_toLeftOf="@+id/iv_header_right"
        android:gravity="center"
        android:layout_marginLeft="@dimen/d_10dp"
        android:paddingLeft="@dimen/d_10dp"
        android:paddingRight="@dimen/d_10dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="@string/app_name"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/iv_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d_10dp"
        android:visibility="invisible"
        android:src="@drawable/ic_cancel_gray" />


</RelativeLayout>