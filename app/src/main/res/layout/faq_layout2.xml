<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_2"
        android:paddingEnd="@dimen/padding_2"
        android:paddingTop="@dimen/padding_3"
        android:paddingBottom="@dimen/padding_2"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/expand_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_colour_gradient"
            android:padding="@dimen/size5">

            <TextView
                android:id="@+id/tv_faq_sub_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_toStartOf="@+id/tv_faq_sub_head_score"
                style="@style/HeadingTextStyle" />

            <TextView
                android:id="@+id/tv_faq_sub_head_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorWhite"
                android:text="Reservation"
                android:layout_centerVertical="true"
                style="@style/text_small"/>

        </RelativeLayout>

        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size5">

            <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AverageScoreStyle"/>

        </RelativeLayout>-->

        <LinearLayout
            android:id="@+id/faq_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/faq_attachment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/app_colour_gradient"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:paddingTop="@dimen/padding_3"
            android:paddingBottom="@dimen/padding_3">

            <TextView
                android:id="@+id/tv_faq_attachment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Attachments"
                style="@style/text_small"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>