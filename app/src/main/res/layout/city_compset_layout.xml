<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10">

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/city_compset_txt2"
            android:text="@string/luxuryhotelmilan"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/hotel_score"
            android:layout_marginEnd="@dimen/margin_20"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/hotel_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="80.3%"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:paddingTop="@dimen/city_compset_score_padding"
            android:paddingBottom="@dimen/city_compset_score_padding"
            android:background="@drawable/golden_circle_city_compset_hotel_score"
            android:textSize="@dimen/city_compset_txt" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey" />

</LinearLayout>