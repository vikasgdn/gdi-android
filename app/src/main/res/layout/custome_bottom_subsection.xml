<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@color/black50"
        android:src="@mipmap/ic_back"
        android:padding="@dimen/size10" />


    <TextView
        android:id="@+id/tv_text_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_header_left"
        android:layout_toLeftOf="@+id/iv_header_right"
        android:textColor="@color/white"
        android:layout_marginLeft="1dp"
        android:visibility="visible"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@color/black50"
        android:layout_marginRight="1dp"
        android:textSize="@dimen/textSize15"
        android:padding="@dimen/size10"
        android:text=""
        />
    <ImageView
        android:id="@+id/iv_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_back_forward"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/black50"
        android:visibility="gone"
        android:padding="@dimen/size10" />


</RelativeLayout>