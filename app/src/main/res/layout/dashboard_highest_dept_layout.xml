<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:background="@color/lightGrey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/highest1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/luxuryhotelmilan"
            android:layout_weight="2"
            style="@style/DashboardDeptText"/>

        <View
            android:layout_width="@dimen/size1"
            android:layout_height="match_parent"
            android:background="@color/lightGrey" />

        <TextView
            android:id="@+id/dashboard_highest1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dummyscore"
            android:layout_weight="2"
            style="@style/DashboardDeptText"/>

        <View
            android:layout_width="@dimen/size1"
            android:layout_height="match_parent"
            android:background="@color/lightGrey"/>

        <TextView
            android:id="@+id/dashboard_highest_score1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dummyscore"
            android:layout_weight="1"
            style="@style/DashboardDeptText"/>

    </LinearLayout>

</LinearLayout>