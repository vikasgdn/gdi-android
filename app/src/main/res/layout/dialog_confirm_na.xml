<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:padding="@dimen/d_15dp">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/d_15dp"
               android:text="@string/app_name"
               android:textSize="@dimen/text_size_22"
               android:fontFamily="@font/comfortaa_bold"
               android:gravity="center"
               android:textColor="@color/c_blue"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dialog_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_layout"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="14sp"
            android:text="@string/text_alert_dialog_na"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunitosans_regular"
            />



        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dialog_message"
            android:layout_marginTop="@dimen/d_20dp"
            android:layout_marginLeft="@dimen/d_2dp"
            android:layout_marginRight="@dimen/d_2dp"
            android:layout_marginBottom="@dimen/d_2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="@dimen/d_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/tv_shape_corner_blue_border"
                android:text="No"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_18"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_blue"/>


            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="@dimen/d_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/c_blue"
                android:text="@string/text_yes"
                android:textSize="@dimen/text_size_18"
                android:textAllCaps="false"
                android:textColor="@color/c_white"
                android:fontFamily="@font/nunitosans_regular"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>