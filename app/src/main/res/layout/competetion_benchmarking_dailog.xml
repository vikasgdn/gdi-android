<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:singleLine="true"
            android:visibility="gone"
            android:textSize="@dimen/textSize14" />

        <com.gdi.utils.CustomTypefaceTextView
            android:id="@+id/tv_subTile_competetion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/competetion_benchmarking"
            android:textColor="@color/colorBlack"
            android:textSize="16dp" />

        <View
            android:id="@+id/dialog_line_upload_image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_subTile_competetion"
            android:layout_marginTop="@dimen/margin_5"
            android:background="#c5c5c5" />

        <com.gdi.utils.CustomTypefaceTextView
            android:id="@+id/tv_city_compset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_12"
            android:text="@string/city_compset"
            android:background="@drawable/app_colour_gradient"
            android:layout_marginTop="@dimen/margin_20"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize16" />

        <com.gdi.utils.CustomTypefaceTextView
            android:id="@+id/tv_global"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_12"
            android:text="@string/global"
            android:background="@drawable/app_colour_gradient"
            android:layout_marginTop="@dimen/margin_5"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize16" />

        <com.gdi.utils.CustomTypefaceTextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_12"
            android:text="@string/cancel"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize16" />

    </LinearLayout>

</LinearLayout>